            x:Class="BeautyBookAdminApp.Views.Page1"
            NavigationPage.HasNavigationBar="False"
             BarBackgroundColor="#3C504C"
           >

    <TabbedPage.ToolbarItems >
        <ToolbarItem Text="My Salon                                    " Order="Primary" />
    </TabbedPage.ToolbarItems>

    <TabbedPage.Children >
            <NavigationPage Title="Profile" >
